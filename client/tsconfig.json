{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types",
      "src/types",
      "src/types/*",
      "../shared/types",
      "../shared/types/*"
    ],
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./src/**/*",
    "../shared/types/**/*"
  ]
}
